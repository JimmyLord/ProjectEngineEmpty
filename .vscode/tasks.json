    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug build",
            "type": "shell",
            "command": "cd GameEmptyReplaceMe && ./build.sh Debug",
            "osx": {
                "command": "cd GameEmptyReplaceMe && xcodebuild -scheme EmptyReplaceMe-OSX build"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "wxDebug build",
            "type": "shell",
            "command": "cd GameEmptyReplaceMe && ./build.sh wxDebug",
            "osx": {
                "command": "cd GameEmptyReplaceMe && xcodebuild -scheme EmptyReplaceMe-wx build"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Release build",
            "type": "shell",
            "command": "cd GameEmptyReplaceMe && ./build.sh Release",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "wxRelease build",
            "type": "shell",
            "command": "cd GameEmptyReplaceMe && ./build.sh wxRelease",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}